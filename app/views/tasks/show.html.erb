<h1>Task Details</h1>
<h2><%= @task.title %></h2>
<p><%= @task.body %></p>
<p><%= @task.due_at %></p>
<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li><%= link_to "Destroy", task_path(@task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>List Items</h2>
<%= render @task.lists %>

<h2>Add a list item:</h2>
<%= render 'lists/form', task: @task %>