<h1>Task Details</h1>
<h2><%= @task.title %></h2>
<p><%= @task.body %></p>
<p><%= @task.due_at %></p>
<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li><%= link_to "Destroy", task_path(@task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>List Items</h2>
<% @task.lists.each do |list| %>
  <p>
    <strong>Name:</strong>
    <%= list.name %>
  </p>
<% end %>

<h2>Add a list item:</h2>
<%= form_with model: [ @task, @task.lists.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>